@model IEnumerable<DACN.Models.SANPHAM>

@{
    ViewBag.Title = "ListProduct";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
            <h5 class="m-0 font-weight-bold text-primary" style="position:relative; left:45%">Thông tin sản phẩm</h5>
        </nav>
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid">
           
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <a href="@Url.Action("CreateProduct", "Admin")" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" style="position:relative; left:88%">
                        Thêm sản phẩm <i class="bi bi-person-plus-fill"></i>
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead style="text-align:center">
                                <tr>
                                    <th>Nhà sản xuất</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Số lượng tồn</th>
                                    <th>Tùy chọn</th>
                                </tr>
                            </thead>
                            <tfoot style="text-align:center">
                                <tr>
                                    <th>Nhà sản xuất</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Số lượng tồn</th>
                                    <th>Tùy chọn</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.NSX.TenNSX</td>
                                        <td>@item.TenSP</td>
                                        <td>@String.Format("{0:0,0đ}", item.GiaSP.Value)</td>
                                        <td>@item.SLTon</td>
                                        <td width="150px" style="text-align:center">

                                            <a href="@Url.Action("EditProduct", "Admin", new { @id = item.IdSP})" class="btn btn-success btn-sm btn-sm" style="width:50px" title="Chi tiết">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <span> | </span>
                                        <a href="@Url.Action("DeleteProduct", "Admin", new { @id = item.IdSP})" class="btn btn-danger btn-sm btn-sm" style="width:50px" title="Xóa sản phẩm ">
                                            <i class="fas fa-trash"></i>
                                        </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
    <!-- Footer -->
    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span></span>
            </div>
        </div>
    </footer>
    <!-- End of Footer -->

</div>
<!-- End of Content Wrapper -->