@model IEnumerable<DACN.Models.LIENHE>

@{
    ViewBag.Title = "ListContact";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
            <h5 class="m-0 font-weight-bold text-primary" style="position:relative; left:45%">Thông tin liên hệ</h5>
        </nav>
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead style="text-align:center">
                                <tr>
                                    <th><strong>Họ Tên</strong></th>
                                    <th><strong>Gmail</strong></th>
                                    <th><strong>Yêu Cầu</strong></th>
                                    <th><strong>Ngày gửi</strong></th>
                                    <th><strong>Tùy chọn</strong></th>
                                </tr>
                            </thead>
                            <tfoot style="text-align:center">
                                <tr>
                                    <th><strong>Họ Tên</strong></th>
                                    <th><strong>Gmail</strong></th>
                                    <th><strong>Yêu Cầu</strong></th>
                                    <th><strong>Ngày gửi</strong></th>
                                    <th><strong>Tùy chọn</strong></th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.HoTen</td>
                                        <td>@item.EmailLH</td>

                                        <td>@item.YeuCau</td>
                                        <td>@String.Format("{0:dd/MM/yyyy}", item.NgayLH)</td>

                                        <td width="150px" style="text-align:center">

                                            <a href="@Url.Action("DeleteContact", "Admin", new { @id = item.MaLH})" class="btn btn-danger btn-sm btn-sm" style="width:50px" title="Xóa">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
    <!-- Footer -->
    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span></span>
            </div>
        </div>
    </footer>
    <!-- End of Footer -->

</div>
<!-- End of Content Wrapper -->