@model DACN.Models.SANPHAM

@{
    ViewBag.Title = "DeleteProduct";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
            <h5 class="m-0 font-weight-bold text-primary" style="position:relative; left:41%">Xóa sản phẩm</h5>
        </nav>
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid">
            <div class="card shadow mb-4" style="background-color: #f8f9fc">
                <div class="row">
                    <div class="col-lg-6">
                        <a href="@Url.Action("ListProduct","Admin")" class="btn btn-light btn-icon-split">
                            <span class="icon text-gray-600">
                                <i class="fas fa-arrow-left"></i>
                            </span>
                        </a>
                    </div>
                </div>

                <p> </p>

                <!-- Content Row -->

                <div class="row">

                    <!-- Border Left Utilities -->
                    <div class="col-lg-5" style="margin-left:80px">

                        <div class="card mb-4 py-0 border-bottom-primary" style="width:90%">
                            <div class="card-body">
                                <i class="bi bi-lock-fill"></i>: @Model.NSX
                            </div>
                        </div>
                        <div class="card mb-4 py-0 border-bottom-primary" style="width:90%">
                            <div class="card-body">
                                <i class="bi bi-lock-fill">: @Model.TenSP</i>
                            </div>
                        </div>

                    </div>

                    <!-- Border Bottom Utilities -->
                    <div class="col-lg-5" style="margin-left:30px">

                        <div class="card mb-4 py-0 border-bottom-primary" style="width:90%">
                            <div class="card-body">
                                <i class="bi bi-lock-fill">: @Model.GiaSP</i>
                            </div>
                        </div>
                        <div class="card mb-4 py-0 border-bottom-primary" style="width:90%">
                            <div class="card-body">
                                <i class="bi bi-lock-fill"></i>: @Model.SLTon
                            </div>
                        </div>
                    </div>

                </div>
                <div style="margin: 0 0 50px 30px">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <p>Bạn có chắc muốn xóa sản phẩm này? </p>
                        <div class="form-actions no-color">
                            <a href="@Url.Action("ListProduct  ", "Admin")">
                                <input type="submit" value="Xóa" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" style="position:relative; left:0" />
                            </a>
                                </div>
                    }
                </div>
            </div>
        </div>

        <!-- /.container-fluid -->


    </div>
    <!-- End of Main Content -->
    <!-- Footer -->
    <footer class="sticky-footer bg-white">
        <div class="container my-auto">

        </div>
    </footer>
    <!-- End of Footer -->

</div>
<!-- End of Content Wrapper -->

