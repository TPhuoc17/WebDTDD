@model DACN.Models.SANPHAM

@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
            <h5 class="m-0 font-weight-bold text-primary" style="position:relative; left:45%">Thông tin sản phẩm</h5>
        </nav>
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.IdSP)
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.MaNSX, "Mã nhà sản xuất", htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.MaNSX, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.MaNSX, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.TenSP, "Tên sản phẩm", htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.BoNho, "Bộ nhớ", htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.BoNho, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.BoNho, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.RAM, "Ram", htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.RAM, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.RAM, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ManHinh, "Màn hình", htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.ManHinh, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ManHinh, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ViXuLy, "Vi xử lý", htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.ViXuLy, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ViXuLy, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            

                            <div class="form-group">
                                @Html.LabelFor(model => model.MoTaSP, "Mô tả sản phẩm", htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.MoTaSP, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.MoTaSP, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">

                            <div class="form-group">
                                @Html.LabelFor(model => model.SLTon, "Sản phẩm tồn", htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.SLTon, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.SLTon, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.GiaSP, "Giá", htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.GiaSP, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.GiaSP, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            

                            <div class="form-group">
                                @*@Html.LabelFor(model => model.HinhSP1, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                <div class="col-md-10">
                                    <strong>Hình</strong>
                                    @Html.EditorFor(model => model.HinhSP, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.HinhSP, "", new { @class = "text-danger" })
                                    <p> </p>
                                    <input type="button" id="btnUpload" value="Chọn" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" />
                                    <input type="file" name="fileUpload" id="fileUpload" accept="image/*"
                                           style="display:none;" />
                                    <img src="@Model.HinhSP" height="200px" width="120px" id="pictureUpload" />
                                </div>
                            </div>
                            @section upload
                            {
                                <script>
                                    $(function () {
                                        $('#btnUpload').click(function () {
                                            $('#fileUpload').trigger('click');
                                        });
                                    });
                                    $('#fileUpload').change(function () {
                                        if (window.FormData !== undefined) {
                                            var fileUpload = $('#fileUpload').get(0);
                                            var files = fileUpload.files;
                                            var formData = new FormData();
                                            formData.append('file', files[0]);
                                            $.ajax(
                                                {
                                                    type: 'POST',
                                                    url: '/Admin/ProcessUpload',
                                                    contentType: false,
                                                    processData: false,
                                                    data: formData,
                                                    success: function (urlImage) {
                                                        $('#pictureUpload').attr('src', urlImage);
                                                        $('#HinhSP').val(urlImage);

                                                    },
                                                    error: function (err) {
                                                        alert('Error ', err.statusText);
                                                    }
                                                });
                                        }
                                    });
                                </script>
                            }
                        </div>
                    </div>
                        

                        
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Lưu" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" />
                            </div>
                        </div>
                    </div>
                    }
                </div>
                
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
    <!-- Footer -->
    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            
        </div>
    </footer>
    <!-- End of Footer -->

</div>
<!-- End of Content Wrapper -->
